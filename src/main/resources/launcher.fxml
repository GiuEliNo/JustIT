<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="it.dosti.justit.controller.gui.LauncherGController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Welcome to JustIT" />
   <TextField promptText="User" />
   <TextField promptText="Password" />
   <HBox alignment="CENTER_LEFT" prefHeight="0.0" prefWidth="200.0" spacing="20.0">
      <children>
         <RadioButton mnemonicParsing="false" selected="true" text="Client">
            <toggleGroup>
               <ToggleGroup fx:id="userType" />
            </toggleGroup>
         </RadioButton>
         <RadioButton mnemonicParsing="false" text="Technician" toggleGroup="$userType" />
      </children>
   </HBox>
    <Button onAction="#onHelloButtonClick" text="Login" />
</VBox>
