<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600" prefWidth="600" spacing="30" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.dosti.justit.controller.graphical.gui.AccountPageGController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <Label text="Account">
        <font>
            <Font size="22" />
        </font>
    </Label>

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints minWidth="120" />
            <ColumnConstraints minWidth="300" />
            <ColumnConstraints minWidth="120" />
        </columnConstraints>

        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="nameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Button onAction="#onEditName" text="Edit" GridPane.columnIndex="2" GridPane.rowIndex="0" />

        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label fx:id="usernameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label fx:id="emailLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button onAction="#onEditEmail" text="Edit" GridPane.columnIndex="2" GridPane.rowIndex="2" />

        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Label text="*******" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button onAction="#onChangePassword" text="Change" GridPane.columnIndex="2" GridPane.rowIndex="3" />
    </GridPane>

</VBox>
