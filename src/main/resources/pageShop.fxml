<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.dosti.justit.controller.gui.PageShopGController">
   <ScrollPane fitToWidth="true" layoutX="14.0" layoutY="14.0" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <VBox spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </padding>
         <HBox alignment="CENTER_LEFT" spacing="20.0">
            <VBox HBox.hgrow="ALWAYS">
               <Label fx:id="shopName" text="Nome Shop">
                  <font>
                     <Font name="System Bold" size="28.0"/>
                  </font>
               </Label>
               <Label fx:id="shopAddress" text="Indirizzo Shop" textFill="#616161">
                  <font>
                     <Font size="16.0"/>
                  </font>
               </Label>
            </VBox>
            <Button fx:id="buttonBooking" mnemonicParsing="false" onAction="#onBookingClicked"
                    prefHeight="45.0" prefWidth="120.0"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Prenota">
               <font>
                  <Font name="System Bold" size="14.0"/>
               </font>
            </Button>
         </HBox>
         <HBox spacing="20.0">
            <ImageView fx:id="shopImage" fitHeight="250.0" fitWidth="350.0" pickOnBounds="true"
                       preserveRatio="true"
                       style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);"/>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <Label text="Descrizione">
                  <font>
                     <Font name="System Bold" size="18.0"/>
                  </font>
               </Label>
               <Label fx:id="shopDescription" alignment="TOP_LEFT" prefHeight="150.0" prefWidth="350.0"
                      text="Descrizione dettagliata dello shop..." wrapText="true"/>
               <HBox fx:id="homeAssistanceBox" alignment="CENTER_LEFT" spacing="10.0">
                  <Label fx:id="homeAssistanceLabel"
                         style="-fx-background-color: #e8f5e9; -fx-text-fill: #2e7d32; -fx-padding: 5 10 5 10; -fx-background-radius: 5;"
                         text="Assistenza a domicilio disponibile"/>
               </HBox>
            </VBox>
         </HBox>
         <GridPane hgap="20.0" vgap="10.0">
            <columnConstraints>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label text="Contatti">
               <font>
                  <Font name="System Bold" size="18.0"/>
               </font>
            </Label>
            <Label text="Orari di apertura" GridPane.columnIndex="1">
               <font>
                  <Font name="System Bold" size="18.0"/>
               </font>
            </Label>
            <VBox spacing="5.0" GridPane.rowIndex="1" GridPane.rowSpan="2">
               <HBox spacing="5.0">
                  <Label text="Tel:" textFill="#757575"/>
                  <Label fx:id="shopPhone" text="+39 123 456 7890"/>
               </HBox>
               <HBox spacing="5.0">
                  <Label text="Email:" textFill="#757575"/>
                  <Label fx:id="shopEmail" text="info@shop.it"/>
               </HBox>
            </VBox>
            <Label fx:id="openingHours" text="Lun-Ven: 09:00 - 18:00" GridPane.columnIndex="1"
                   GridPane.rowIndex="1"/>
         </GridPane>
         <VBox spacing="10.0">
            <Label text="Dove trovarci">
               <font>
                  <Font name="System Bold" size="18.0"/>
               </font>
            </Label>
            <StackPane fx:id="mapContainer" prefHeight="300.0" prefWidth="700.0"
                       style="-fx-border-color: #e0e0e0;"/>
         </VBox>
      </VBox>
   </ScrollPane>
</AnchorPane>
