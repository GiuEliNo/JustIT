<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.dosti.justit.controller.graphical.gui.NotificationGController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <VBox>
            <Label styleClass="page-title" text="System Messages" />
            <Label styleClass="small-label" text="Alerts and notifications" />
        </VBox>

        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#updateMessages" styleClass="button-secondary" text="REFRESH" />
    </HBox>

    <ListView fx:id="messageListView" styleClass="clean-list-view" VBox.vgrow="ALWAYS">
        <placeholder>
            <VBox alignment="CENTER" spacing="5">
                <Label style="-fx-text-fill: #9e9e9e; -fx-font-size: 14px;" text="No new notifications." />
                <Label style="-fx-text-fill: #bdbdbd; -fx-font-size: 12px;" text="You are up to date." />
            </VBox>
        </placeholder>
    </ListView>

</VBox>