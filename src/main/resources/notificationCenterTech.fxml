    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Messages">
            <font>
                <Font size="22" />
            </font>
        </Label>
        <Button onAction="#updateMessages" text="Refresh" />
    </HBox>

    <ListView fx:id="messageListView" prefHeight="520" prefWidth="560" />

</VBox>
