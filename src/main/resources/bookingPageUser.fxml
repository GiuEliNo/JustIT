<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.dosti.justit.controller.graphical.gui.BookingPageGController">

   <padding>
      <Insets bottom="40" left="40" right="40" top="40" />
   </padding>

   <Label styleClass="page-title" text="Booking an Appointment" />

   <VBox alignment="CENTER_LEFT" maxWidth="500" spacing="15" styleClass="card">

      <padding>
         <Insets bottom="30" left="30" right="30" top="30" />
      </padding>

      <VBox spacing="5">
         <Label styleClass="field-label" text="PICK A DATE" />
         <DatePicker fx:id="datePicker" maxWidth="Infinity" promptText="DD/MM/YYYY" />
      </VBox>

      <VBox spacing="5">
         <Label styleClass="field-label" text="SELECT A TIMESLOT" />
         <ChoiceBox fx:id="timeSlotChoiceBox" maxWidth="Infinity" />
      </VBox>

      <VBox spacing="5" VBox.vgrow="ALWAYS">
         <Label styleClass="field-label" text="DESCRIBE THE PROBLEM" />
         <TextArea fx:id="descriptionArea" prefHeight="120.0" promptText="Describe your troubles..." wrapText="true" />
      </VBox>

      <Button fx:id="bookButton" maxWidth="Infinity" onAction="#bookButtonPressed" text="CONFIRM BOOKING">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>

   </VBox>

</VBox>
