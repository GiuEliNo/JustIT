<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.dosti.justit.controller.graphical.gui.BookingPageGController">

   <padding>
      <Insets bottom="40" left="40" right="40" top="40" />
   </padding>

   <VBox alignment="CENTER" spacing="5">
      <Label styleClass="page-title" text="Book Appointment" />
      <Label styleClass="small-label" text="Schedule a visit with the shop" />
   </VBox>

   <VBox alignment="CENTER_LEFT" maxWidth="500" spacing="20" styleClass="card">

      <padding>
         <Insets bottom="30" left="30" right="30" top="30" />
      </padding>

      <VBox spacing="5">
         <Label styleClass="field-label" text="PICK A DATE" />
         <DatePicker fx:id="datePicker" maxWidth="Infinity" promptText="DD/MM/YYYY" />
      </VBox>

      <HBox spacing="20" alignment="CENTER_LEFT">

         <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label styleClass="field-label" text="SELECT TIME SLOT" />
            <ChoiceBox fx:id="timeSlotChoiceBox" maxWidth="Infinity" />
         </VBox>

         <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label styleClass="field-label" text="ADDITIONAL SERVICES" />
            <HBox alignment="CENTER_LEFT" prefHeight="35.0" style="-fx-border-color: transparent; -fx-border-radius: 5;">
               <CheckBox fx:id="homeAssistanceCheck" mnemonicParsing="false" text="Request home visit" />
            </HBox>
         </VBox>

      </HBox>

      <VBox spacing="5" VBox.vgrow="ALWAYS">
         <Label styleClass="field-label" text="DESCRIBE THE PROBLEM" />
         <TextArea fx:id="descriptionArea" prefHeight="100.0" promptText="Describe briefly your issue..." wrapText="true" />
      </VBox>

      <Button fx:id="bookButton" maxWidth="Infinity" onAction="#bookButtonPressed" styleClass="button" text="CONFIRM BOOKING">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>

   </VBox>

</VBox>