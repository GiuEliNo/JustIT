<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.SVGPath?>

<HBox alignment="CENTER_LEFT"
      spacing="10"
      prefHeight="50"
      style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);"
      xmlns="http://javafx.com/javafx/"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.dosti.justit.controller.graphical.gui.TopBarGController">

    <padding>
        <Insets left="20" right="20"/>
    </padding>

    <Label fx:id="usernameLabel" graphicTextGap="10" style="-fx-font-weight: bold; -fx-font-size: 14px;">
        <graphic>
            <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                     styleClass="icon-fill"
                     scaleX="1.2" scaleY="1.2" />
        </graphic>
    </Label>

    <Region HBox.hgrow="ALWAYS"/>

    <Button text="Logout" onAction="#onLogout" styleClass="button-logout"/>

</HBox>