<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.dosti.justit.controller.graphical.gui.SearchListShopGController">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">

        <ToggleButton fx:id="filterRadiusButton" mnemonicParsing="false" onAction="#filterRadiusButtonClicked" styleClass="filter-toggle-button" text="Filter Radius" />

        <Region HBox.hgrow="ALWAYS" />

        <VBox alignment="CENTER_RIGHT" spacing="2">
            <Label fx:id="radiusLabel" styleClass="small-label" text="50 km" />
            <Slider fx:id="radiusSlider" blockIncrement="5.0" max="50.0" min="5.0" prefWidth="120.0" value="5.0" />
        </VBox>
    </HBox>

    <HBox alignment="CENTER_LEFT" prefHeight="45.0" spacing="10.0" styleClass="search-container">
        <padding>
            <Insets left="15.0" right="15.0" />
        </padding>

        <TextField fx:id="searchField" promptText="Search shop..." styleClass="search-field" HBox.hgrow="ALWAYS" />

        <SVGPath content="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" fill="#757575" scaleX="1.2" scaleY="1.2" />
    </HBox>

    <ListView fx:id="listView" onMouseClicked="#onSelectPage" styleClass="custom-list-view" VBox.vgrow="ALWAYS" />

</VBox>