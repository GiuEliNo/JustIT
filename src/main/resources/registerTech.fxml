<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" fillWidth="false" spacing="25.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.dosti.justit.controller.graphical.gui.RegisterTechGController">

    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <VBox alignment="CENTER" spacing="5">
        <Label styleClass="page-title" text="Technician Registration" />
        <Label styleClass="small-label" text="Join as a professional partner" />
    </VBox>

    <VBox maxWidth="600.0" minWidth="500.0" spacing="20.0" styleClass="card">

        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
        </padding>

        <Label fx:id="warningLabel" styleClass="error-label" wrapText="true" />

        <HBox spacing="15.0">
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label styleClass="field-label" text="USERNAME" />
                <TextField fx:id="usernameField" promptText="Choose username" />
            </VBox>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label styleClass="field-label" text="PASSWORD" />
                <PasswordField fx:id="passwordField" promptText="Choose password" />
            </VBox>
        </HBox>

        <HBox spacing="15.0">
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label styleClass="field-label" text="FULL NAME" />
                <TextField fx:id="nameField" promptText="e.g. John Doe" />
            </VBox>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label styleClass="field-label" text="EMAIL ADDRESS" />
                <TextField fx:id="emailField" promptText="tech@example.com" />
            </VBox>
        </HBox>

        <Region style="-fx-border-color: #eeeeee; -fx-border-width: 1 0 0 0;" />

        <VBox spacing="5.0">
            <Label styleClass="field-label" text="SHOP NAME" />
            <TextField fx:id="shopField" promptText="Enter the shop you work for" />
            <Label style="-fx-font-size: 11px; -fx-text-fill: #999999;" text="*If you own a new shop, register it using the button below." />
        </VBox>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <VBox.margin>
                <Insets top="15.0" />
            </VBox.margin>

            <Button fx:id="backButton" cancelButton="true" onAction="#backButtonPressed" prefWidth="90.0" styleClass="button-secondary" text="BACK" />

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="signShopButton" onAction="#onSignShopButtonClicked" styleClass="button-secondary" text="REGISTER SHOP" />
            <Button fx:id="signInButton" defaultButton="true" onAction="#signInPressed" prefWidth="120.0" styleClass="button" text="REGISTER" />
        </HBox>

    </VBox>

</VBox>