<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.dosti.justit.controller.graphical.gui.RegisterTechGController">

    <top>
        <VBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="JustIT">
                    <font>
                        <Font size="30.0" />
                    </font>
                </Label>
                <Label text="Technician Sign In">
                    <font>
                        <Font size="22.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
            <Label fx:id="warningLabel" />
                <VBox maxWidth="500.0" spacing="10.0" VBox.vgrow="NEVER">
                    <children>
                        <Label text="Username" />
                        <TextField fx:id="usernameField" />

                        <Label text="Password" />
                        <TextField fx:id="passwordField" />

                        <Label text="Name" />
                        <TextField fx:id="nameField" />

                        <Label text="Email" />
                        <TextField fx:id="emailField" />

                        <Label text="Shop" />
                        <TextField fx:id="shopField" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </padding>
            <children>
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonPressed" prefWidth="100.0" text="Back" />

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="signInButton" mnemonicParsing="false" onAction="#signInPressed" prefWidth="200.0" text="Register" />
                <Button fx:id="signShopButton" mnemonicParsing="false" onAction="#onSignShopButtonClicked" prefWidth="150.0" text="Register Shop" />
            </children>
        </HBox>
    </bottom>

</BorderPane>
